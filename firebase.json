{

  "functions": {
    "source": "functions",
    "runtime": "nodejs20",          
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },

  "hosting": [
    {
      "target": "main",
      "public": "dist",
      "ignore": ["firebase.json","**/.*","**/node_modules/**"],
      "rewrites": [{ "source": "**","destination": "/index.html" }],
      "headers": [{ "source": "**","headers":[{"key":"Strict-Transport-Security","value":"max-age=31536000; includeSubDomains"}] }]
    },
    {
      "target": "admin",
      "public": "dist",
      "ignore": ["firebase.json","**/.*","**/node_modules/**"],
      "rewrites": [{ "source": "**","destination": "/index.html" }],
      "headers": [{ "source": "**","headers":[{"key":"Strict-Transport-Security","value":"max-age=31536000; includeSubDomains"}] }]
    },
    {
      "target": "scanner",
      "public": "dist",
      "ignore": ["firebase.json","**/.*","**/node_modules/**"],
      "rewrites": [{ "source": "**","destination": "/index.html" }],
      "headers": [{ "source": "**","headers":[{"key":"Strict-Transport-Security","value":"max-age=31536000; includeSubDomains"}] }]
    }
  ]
}
